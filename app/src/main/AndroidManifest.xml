<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esgi.iw3.g26.shoppinglist">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.User.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.User.SubscribeActivity"
            android:label="@string/title_activity_subscribe"></activity>
        <activity
        android:name=".Activity.ShoppingList.ListsActivity"
        android:label="@string/title_activity_lists"></activity>
        <activity
            android:name=".Activity.ShoppingList.ListActivity"
            android:label="@string/title_activity_products"></activity>
        <activity
            android:name=".Activity.ShoppingList.CreateListActivity"
            android:label="@string/title_activity_createList"></activity>
        <activity
            android:name=".Activity.ShoppingList.EditListActivity"
            android:label="@string/title_activity_editList"></activity>
        <activity
            android:name=".Activity.Product.CreateProductActivity"
            android:label="@string/title_activity_createProduct"></activity>
        <activity
            android:name=".Activity.Product.EditProductActivity"
            android:label="@string/title_activity_editProduct"></activity>
        <!--TODO: changer le nom et le theme-->
    </application>

</manifest>